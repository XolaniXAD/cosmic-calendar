<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>APOD Viewer: Earth Content</title>

    <!-- TailwindCSS with plugins -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <!-- Google Fonts preconnect & font families -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Space+Mono:wght@700&display=swap" rel="stylesheet" />

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <!-- Tailwind Configuration -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#208af3",
                        "background-light": "#f5f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"],
                        "heading": ["Space Mono", "monospace"]
                    },
                    borderRadius: {
                        DEFAULT: "0.25rem",
                        lg: "0.5rem",
                        xl: "0.75rem",
                        full: "9999px"
                    },
                },
            },
        }
    </script>

    <!-- Tailwind styles applied via @apply -->
    <style type="text/tailwindcss">
        body {
            @apply font-display bg-background-light dark:bg-background-dark;
        }
    </style>
    
    <!-- Axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body class="font-display">

    <!-- Root container â€” controls background + full layout -->
    <div class="relative flex h-auto min-h-screen w-full flex-col bg-background-light dark:bg-background-dark group/design-root overflow-hidden">

        <!-- Background media layer -->
        <div id="media-container" class="absolute inset-0 z-0">
            <% if (locals.apod) { %>
                <% if (locals.apod.media_type === 'image') { %>
                    <!-- Image background -->
                    <div
                        class="absolute inset-0 bg-center bg-no-repeat bg-cover"
                        data-alt="<%= locals.apod.title %>"
                        style='background-image: url("<%= locals.apod.url %>");'>
                    </div>
                <% } else if (locals.apod.media_type === 'video') { %>
                    <!-- Video background (YouTube embed) -->
                    <div class="absolute inset-0 overflow-hidden">
                        <iframe
                            class="absolute top-1/2 left-1/2 w-[177.77vh] h-[56.25vw] min-h-screen min-w-full -translate-x-1/2 -translate-y-1/2"
                            src="<%= locals.apod.url %>"
                            title="<%= locals.apod.title %>"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                        </iframe>
                    </div>
                <% } %>
            <% } %>
        </div>

        <!-- Foreground content layer -->
        <div class="relative z-10 flex h-full grow flex-col">

            <!-- Header -->
            <header id="header" class="flex items-center justify-between p-6 md:p-10">
                <span class="font-heading text-lg font-bold text-white">APOD Viewer</span>

                <!-- Calendar button -->
                <button
                    id="calendar-btn"
                    class="flex h-10 min-w-10 w-10 cursor-pointer items-center justify-center overflow-hidden rounded-lg bg-primary/20 text-primary transition-colors hover:bg-primary/30">
                    <span class="material-symbols-outlined">calendar_today</span>
                </button>
            </header>

            <!-- Main content block -->
            <main class="flex-1 flex items-end justify-center p-6 md:p-10">

                <!-- Glassmorphism content card with skeleton loading -->
                <div id="content-card" class="w-full max-w-4xl p-8 rounded-xl backdrop-blur-lg bg-background-dark/70 text-white border border-white/10">

                    <!-- Skeleton Loading (hidden by default) -->
                    <div id="skeleton-loading" class="hidden animate-pulse">
                        <!-- Skeleton title -->
                        <div class="h-10 bg-white/20 rounded-lg w-3/4 mb-4"></div>
                        <!-- Skeleton date -->
                        <div class="h-6 bg-white/20 rounded-lg w-1/4 mb-6"></div>
                        <!-- Skeleton divider -->
                        <div class="border-t border-white/10 my-6"></div>
                        <!-- Skeleton text lines -->
                        <div class="space-y-3">
                            <div class="h-4 bg-white/20 rounded w-full"></div>
                            <div class="h-4 bg-white/20 rounded w-full"></div>
                            <div class="h-4 bg-white/20 rounded w-5/6"></div>
                            <div class="h-4 bg-white/20 rounded w-full"></div>
                            <div class="h-4 bg-white/20 rounded w-4/5"></div>
                        </div>
                    </div>

                    <!-- Actual Content (visible by default) -->
                    <div id="apod-content">
                        <!-- Title + share button row -->
                        <div class="flex flex-col md:flex-row items-start justify-between gap-6">

                            <% if (locals.apod) { %>
                            <!-- Titles -->
                            <div class="flex flex-col gap-2">
                                <h1 id="apod-title" class="text-4xl font-bold font-heading text-white"><%= locals.apod.title %></h1>
                                <h2 id="apod-date" class="text-lg font-heading text-white/80"><%= locals.apod.date %></h2>
                            </div>

                        <!-- Share button (placeholder) -->
                        <!-- <button
                            class="flex h-10 min-w-10 w-10 cursor-pointer items-center justify-center overflow-hidden rounded-lg bg-primary/20 text-primary transition-colors hover:bg-primary/30">
                            <span class="material-symbols-outlined">share</span>
                        </button> -->
                    </div>

                        <!-- Divider + APOD Description -->
                        <div class="mt-6 border-t border-white/10 pt-6">
                            <p id="apod-explanation" class="text-base leading-relaxed text-white/90 font-display">
                                <%= locals.apod.explanation %>
                            </p>
                        </div>
                        <% } else { %>
                        <!-- Error Message Display -->
                        <div class="flex flex-col gap-4">
                            <div class="flex items-center gap-3">
                                <span class="material-symbols-outlined text-red-400 text-3xl">error</span>
                                <h1 class="text-3xl font-bold font-heading text-white">Unable to Load APOD</h1>
                            </div>
                            
                            <div class="mt-4 border-t border-red-400/20 pt-4">
                                <p class="text-base leading-relaxed text-white/90 font-display mb-4">
                                    <% if (locals.error) { %>
                                        <%= locals.error %>
                                    <% } else { %>
                                        We couldn't retrieve the Astronomy Picture of the Day. This could be due to a network issue or a problem with the NASA API.
                                    <% } %>
                                </p>
                                
                                <button 
                                    onclick="window.location.reload()" 
                                    class="flex items-center gap-2 px-4 py-2 rounded-lg bg-primary/20 text-primary transition-colors hover:bg-primary/30 cursor-pointer">
                                    <span class="material-symbols-outlined">refresh</span>
                                    <span>Try Again</span>
                                </button>
                            </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
        
        <!-- Date Picker Modal (hidden by default) -->
        <div id="date-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/70 backdrop-blur-sm">
            <div class="relative w-full max-w-md p-8 mx-4 rounded-xl bg-background-dark border border-white/10">
                <!-- Close button -->
                <button
                    id="modal-close-btn"
                    class="absolute top-4 right-4 flex h-10 w-10 items-center justify-center rounded-lg bg-white/10 text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">close</span>
                </button>
                
                <!-- Modal header -->
                <h2 class="text-2xl font-bold font-heading text-white mb-6">Select a Date</h2>
                
                <!-- Date input -->
                <div class="space-y-4">
                    <label for="date-input" class="block text-sm font-medium text-white/80">
                        Choose any date from June 16, 1995 to today
                    </label>
                    <input
                        type="date"
                        id="date-input"
                        min="1995-06-16"
                        max="<%= new Date().toISOString().split('T')[0] %>"
                        class="w-full px-4 py-3 rounded-lg bg-background-light/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-primary">
                    
                    <!-- Action buttons -->
                    <div class="flex gap-3 mt-6">
                        <button
                            id="modal-cancel-btn"
                            class="flex-1 px-4 py-3 rounded-lg bg-white/10 text-white hover:bg-white/20 transition-colors">
                            Cancel
                        </button>
                        <button
                            id="modal-select-btn"
                            class="flex-1 px-4 py-3 rounded-lg bg-primary text-white hover:bg-primary/80 transition-colors font-medium">
                            View APOD
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Loading Spinner (hidden by default) -->
        <div id="loading-spinner" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm">
            <div class="flex flex-col items-center gap-4">
                <div class="w-16 h-16 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
                <p class="text-white font-medium">Loading APOD...</p>
            </div>
        </div>
    </div>
    
    <!-- Client-side JavaScript -->
    <script src="/main.js"></script>

</body>
</html>
